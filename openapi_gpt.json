        },
        "required": [
          "ok",
          "error"
        ],
        "additionalProperties": false,
        "description": "Стандартный ответ об ошибке."
      },
      "IssueVpnKeyRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
