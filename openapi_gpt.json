    "/vpn/issue_key": {
      "post": {
        "tags": [
          "vpn"
        ],
        "summary": "Выдать VPN-ключ",
        "description": "Выдаёт VPN-ключ бесплатно (временный демо-режим)",
        "operationId": "vpnPostIssueKey",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/IssueVpnKeyResponse"
                },
                "example": {
                  "ok": true,
                  "uuid": "0b5c3fce-8c1c-4ed7-8aa7-7f5c6ec0e123",
                  "link": "vless://...",
                  "expires": "2024-12-31",
                  "message": "Ключ создан успешно."
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "username": "demo_user",
                "days": 30
              },
              "schema": {
                "$ref": "#/components/schemas/IssueVpnKeyRequest"
              }
            }
          }
        },
        "security": [
          {
            "AdminTokenAuth": []
          }
        ]
      }
    },
