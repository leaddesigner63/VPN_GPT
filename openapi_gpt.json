          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        },
        "security": [
          {
            "AdminToken": []
          }
        ]
      }
    },
    "/vpn/disable_key": {
      "post": {
        "tags": [
          "vpn"
        ],
        "summary": "Disable Vpn Key",
