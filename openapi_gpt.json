          },
          "link": {
            "type": "string"
          },
          "uuid": {
            "type": "string",
            "format": "uuid"
          },
          "expires": {
            "type": "string",
            "format": "date"
          },
          "message": {
            "type": "string"
          }
        },
        "required": [
          "ok",
          "link",
          "uuid",
          "expires"
