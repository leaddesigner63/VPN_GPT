  "components": {
    "schemas": {
      "DisableKeyRequest": {
        "properties": {
          "uuid": {
            "type": "string",
            "title": "Uuid"
          }
        },
        "type": "object",
        "required": [
          "uuid"
        ],
        "title": "DisableKeyRequest"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "IssueKeyRequest": {
        "properties": {
          "username": {
            "type": "string",
            "title": "Username",
            "description": "Telegram username без @"
          },
          "days": {
            "anyOf": [
              {
                "type": "integer"
              },
              {
                "type": "null"
              }
            ],
            "title": "Days",
            "description": "Количество дней действия ключа",
            "default": 3
          }
        },
        "type": "object",
        "required": [
          "username"
        ],
        "title": "IssueKeyRequest"
      },
      "IssueKeyResponse": {
        "properties": {
          "ok": {
            "type": "boolean",
            "title": "Ok",
            "default": true
          },
          "username": {
            "type": "string",
            "title": "Username"
          },
          "uuid": {
            "type": "string",
            "title": "Uuid"
          },
          "link": {
            "type": "string",
            "title": "Link"
          },
          "expires_at": {
            "type": "string",
            "title": "Expires At"
          },
          "active": {
            "type": "boolean",
            "title": "Active",
            "default": true
          }
        },
        "type": "object",
        "required": [
          "username",
          "uuid",
          "link",
          "expires_at",
          "active"
        ],
        "title": "IssueKeyResponse"
      },
      "RenewKeyRequest": {
        "properties": {
          "username": {
            "type": "string",
            "title": "Username"
          },
          "days": {
            "type": "integer",
            "title": "Days",
            "default": 30
          }
        },
        "type": "object",
        "required": [
          "username"
        ],
        "title": "RenewKeyRequest"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      },
      "ErrorResponse": {
        "title": "ErrorResponse",
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean",
            "title": "Ok",
            "default": false
          },
          "error": {
            "type": "string",
            "title": "Error"
          }
        },
        "required": [
          "ok",
          "error"
        ]
      }
    }
  },
  "servers": [
