          "username": {
            "type": "string"
          },
          "expires": {
            "type": "string",
            "format": "date"
          }
        },
        "required": [
          "ok",
          "username",
          "expires"
        ],
        "additionalProperties": false,
        "description": "Успешный ответ продления VPN-ключа."
      },
