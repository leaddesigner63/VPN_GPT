  "components": {
    "schemas": {
      "DisableKeyRequest": {
        "properties": {
          "uuid": {
            "type": "string",
            "title": "Uuid"
          }
        },
        "type": "object",
        "required": [
          "uuid"
        ],
        "title": "DisableKeyRequest"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "IssueKeyRequest": {
        "properties": {
          "username": {
            "type": "string",
            "title": "Username",
            "description": "Telegram username без @"
          },
          "days": {
            "anyOf": [
              {
                "type": "integer"
              },
              {
                "type": "null"
              }
            ],
            "title": "Days",
            "description": "Количество дней действия ключа",
            "default": 3
          }
        },
        "type": "object",
        "required": [
          "username"
        ],
        "title": "IssueKeyRequest"
      },
      "IssueKeyResponse": {
        "properties": {
          "ok": {
            "type": "boolean",
            "title": "Ok",
            "default": true
          },
          "username": {
            "type": "string",
            "title": "Username"
          },
          "uuid": {
            "type": "string",
            "title": "Uuid"
          },
          "link": {
            "type": "string",
            "title": "Link"
          },
          "expires_at": {
            "type": "string",
            "title": "Expires At"
          },
          "active": {
            "type": "boolean",
            "title": "Active",
            "default": true
          }
        },
        "type": "object",
        "required": [
          "ok",
          "username",
          "uuid",
          "link",
          "expires_at",
          "active"
        ],
        "title": "IssueKeyResponse"
      },
      "RenewKeyRequest": {
        "properties": {
          "username": {
            "type": "string",
            "title": "Username"
          },
          "days": {
            "type": "integer",
            "title": "Days",
            "default": 30
          }
        },
        "type": "object",
        "required": [
          "username"
        ],
        "title": "RenewKeyRequest"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      },
      "ErrorResponse": {
        "title": "ErrorResponse",
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean",
            "title": "Ok",
            "default": false
          },
          "error": {
            "type": "string",
            "title": "Error"
          }
        },
        "required": [
          "ok",
          "error"
        ]
      },
      "NotifyRequest": {
        "type": "object",
        "required": [
          "username",
          "text"
        ],
        "properties": {
          "username": {
            "type": "string",
            "description": "Telegram username без @"
          },
          "text": {
            "type": "string",
            "description": "Message text to send"
          }
        },
        "title": "NotifyRequest"
      },
      "RenewKeyResponse": {
        "type": "object",
        "title": "RenewKeyResponse",
        "properties": {
          "ok": {
            "type": "boolean",
            "default": true
          },
          "username": {
            "type": "string"
          },
          "expires_at": {
            "type": "string",
            "description": "ISO 8601 expiry timestamp"
          }
        },
        "required": [
          "ok",
          "username",
          "expires_at"
        ]
      },
      "DisableKeyResponse": {
        "type": "object",
        "title": "DisableKeyResponse",
        "properties": {
          "ok": {
            "type": "boolean",
            "default": true
          },
          "uuid": {
            "type": "string"
          }
        },
        "required": [
          "ok",
          "uuid"
        ]
      },
      "VpnKeySummary": {
        "type": "object",
        "title": "VpnKeySummary",
        "properties": {
          "uuid": {
            "type": "string"
          },
          "active": {
            "type": "boolean"
          },
          "expires_at": {
            "type": "string",
            "nullable": true
          },
          "link": {
            "type": "string",
            "nullable": true
          }
        },
        "required": [
          "uuid",
          "active",
          "expires_at",
          "link"
        ]
      },
      "GetUserResponse": {
        "type": "object",
        "title": "GetUserResponse",
        "properties": {
          "ok": {
            "type": "boolean",
            "default": true
          },
          "username": {
            "type": "string"
          },
          "keys": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/VpnKeySummary"
            }
          }
        },
        "required": [
          "ok",
          "username",
          "keys"
        ]
      },
      "VpnUserRecord": {
        "type": "object",
        "title": "VpnUserRecord",
        "properties": {
          "id": {
            "type": "integer",
            "nullable": true
          },
          "user_id": {
            "type": "string",
            "nullable": true
          },
          "chat_id": {
            "type": "integer",
            "nullable": true
          },
          "username": {
            "type": "string",
            "nullable": true
          },
          "uuid": {
            "type": "string",
            "nullable": true
          },
          "link": {
            "type": "string",
            "nullable": true
          },
          "issued": {
            "type": "string",
            "nullable": true
          },
          "expires": {
            "type": "string",
            "nullable": true
          },
          "issued_at": {
            "type": "string",
            "nullable": true
          },
          "expires_at": {
            "type": "string",
            "nullable": true
          },
          "active": {
            "type": "integer",
            "nullable": true
          }
        }
      },
      "UsersListResponse": {
        "type": "object",
        "title": "UsersListResponse",
        "properties": {
          "ok": {
            "type": "boolean",
            "default": true
          },
          "users": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/VpnUserRecord"
            }
          }
        },
        "required": [
          "ok",
          "users"
        ]
      },
      "ExpiringUsersResponse": {
        "type": "object",
        "title": "ExpiringUsersResponse",
        "properties": {
          "ok": {
            "type": "boolean",
            "default": true
          },
          "users": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/VpnUserRecord"
            }
          }
        },
        "required": [
          "ok",
          "users"
        ]
      },
      "UserInfoResponse": {
        "type": "object",
        "title": "UserInfoResponse",
        "properties": {
          "ok": {
            "type": "boolean",
            "default": true
          },
          "user": {
            "$ref": "#/components/schemas/VpnUserRecord"
          }
        },
        "required": [
          "ok",
          "user"
        ]
      },
      "TelegramUser": {
        "type": "object",
        "title": "TelegramUser",
        "properties": {
          "username": {
            "type": "string"
          },
          "chat_id": {
            "type": "integer",
            "nullable": true
          }
        },
        "required": [
          "username",
          "chat_id"
        ]
      },
      "AllTelegramUsersResponse": {
        "type": "object",
        "title": "AllTelegramUsersResponse",
        "properties": {
          "ok": {
            "type": "boolean",
            "default": true
          },
          "users": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TelegramUser"
            }
          }
        },
        "required": [
          "ok",
          "users"
        ]
      },
      "NotifySuccessResponse": {
        "type": "object",
        "title": "NotifySuccessResponse",
        "properties": {
          "ok": {
            "type": "boolean",
            "default": true
          },
          "username": {
            "type": "string"
          },
          "chat_id": {
            "type": "integer"
          }
        },
        "required": [
          "ok",
          "username",
          "chat_id"
        ]
      },
      "BackupDatabaseResponse": {
        "type": "object",
        "title": "BackupDatabaseResponse",
        "properties": {
          "ok": {
            "type": "boolean",
            "default": true
          },
          "backup": {
            "type": "string",
            "description": "Filesystem path to the created backup"
          }
        },
        "required": [
          "ok",
          "backup"
        ]
      },
      "HealthzResponse": {
        "type": "object",
        "title": "HealthzResponse",
        "properties": {
          "ok": {
            "type": "boolean",
            "default": true
          }
        },
        "required": [
          "ok"
        ]
      }
    },
    "securitySchemes": {
      "AdminToken": {
        "type": "apiKey",
        "in": "header",
        "name": "X-Admin-Token",
        "description": "Admin token required for privileged operations. Provide the value configured in the service."
      }
    }
  },
  "servers": [
    {
      "url": "https://vpn-gpt.store/api"
    }
  ]
}
